@let(variant = $props.get('variant', 'default'))

@let(variantClasses = {
  default: 'badge badge-primary',
  secondary: 'badge badge-secondary',
  destructive: 'badge badge-destructive',
  outline: 'badge badge-outline',
  success: 'badge badge-success',
  warning: 'badge badge-warning'
})

@let(selectedClass = variantClasses[variant] || 'badge badge-primary')

<span
  {{ $props.except(['variant']).merge({
    class: selectedClass
  }).toAttrs() }}
>
  {{{ await $slots.main() }}}
</span>
