@if(validation)
  <div class="animate-slide-in">
    @if(validation.valid)
      {{-- Success Validation --}}
      <div class="alert alert-success">
        <div class="alert-title">✓ Valid SQL Query</div>
        <div class="alert-description">
          <div class="flex items-center gap-2">
            <span>Score:</span>
            @if(validation.score >= 80)
              <span class="badge badge-success">{{ validation.score }}/100</span>
            @else
              <span class="badge badge-warning">{{ validation.score }}/100</span>
            @end
          </div>
          
          @if(validation.warnings && validation.warnings.length > 0)
            <div style="margin-top: 0.75rem;">
              <strong>Warnings:</strong>
              <ul style="margin: 0.5rem 0 0 1.5rem; list-style: disc;">
                @each(warning in validation.warnings)
                  <li>{{ warning }}</li>
                @end
              </ul>
            </div>
          @end
        </div>
      </div>
    @else
      {{-- Error Validation --}}
      <div class="alert alert-destructive">
        <div class="alert-title">✗ Invalid SQL Query</div>
        <div class="alert-description">
          @if(validation.errors && validation.errors.length > 0)
            <strong>Errors:</strong>
            <ul style="margin: 0.5rem 0 0 1.5rem; list-style: disc;">
              @each(error in validation.errors)
                <li>{{ error }}</li>
              @end
            </ul>
          @end
          
          @if(validation.suggestions && validation.suggestions.length > 0)
            <div style="margin-top: 0.75rem;">
              <strong>Suggestions:</strong>
              <ul style="margin: 0.5rem 0 0 1.5rem; list-style: disc;">
                @each(suggestion in validation.suggestions)
                  <li>{{ suggestion }}</li>
                @end
              </ul>
            </div>
          @end
        </div>
      </div>
    @end
  </div>
@end
